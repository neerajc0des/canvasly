{
  "name": "canvasly",
  "version": "1.0.2",
  "description": "A customizable and easy-to-use React drawing component, styled with Tailwind CSS.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "private": false,
  "type": "commonjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc && tsc --module esnext --outDir dist/esm"
  },
  "keywords": [
    "react canvas",
    "drawing",
    "canvas",
    "sketch",
    "component",
    "typescript",
    "tailwind",
    "art"
  ],
  "author": "Neeraj <n33raj.kr@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-color": "^2.19.3",
    "react-dom": "^19.1.0",
    "react-sketch-canvas": "^6.2.0"
  },
  "dependencies": {
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-color": "^3.0.13",
    "@types/react-dom": "^19.1.6",
    "typescript": "^5.8.3"
  }
}
